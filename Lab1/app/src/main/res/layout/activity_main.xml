<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">
        <TextView
            android:id="@+id/textTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:hint="Приложение1"/>
        <EditText
            android:id="@+id/LastNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия"/>
        <EditText
            android:id="@+id/FirstNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"/>
        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Это Я"/>
        <TextView
            android:id="@+id/Greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Кто ты?"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorText"/>
        <EditText
            android:id="@+id/BirthDateBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ДД ММ ГГГГ"
            android:inputType="datetime"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ввод даты"/>
        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата вашего рождения:"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorDate"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>